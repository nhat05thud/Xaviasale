                                                </svg>
                                            </div>
                                            <select name="" autocomplete="" class="w-100 px12 py8 pr32 base-select--with-prefix-icon shape-sharp-t-l-b-r" id="sort-product--ajax">
                                                <option value="@Utils.SortByCreatedDate:@Utils.OrderByDescending">Newest</option>
                                                <option value="@Utils.SortByCreatedDate:@Utils.OrderBy">Oldest</option>
                                                <option value="@Utils.SortByName:@Utils.OrderBy">Alphabet, A -&gt; Z</option>
                                                <option value="@Utils.SortByName:@Utils.OrderByDescending">Alphabet, Z -&gt; A</option>
                                                <option value="@Utils.SortByPrice:@Utils.OrderBy">Price, Low to high</option>
                                                <option value="@Utils.SortByPrice:@Utils.OrderByDescending">Price, High to low</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="flex">
                        <div class="w-100 flex direction-column justify-space-between">
                            <div id="loadAjaxProductBySort">
                                @Html.Action("LoadProducts", "Product")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
    @Html.Partial("Layout/ProductsCarousel/_BestSeller")
    @Html.Partial("Layout/ProductsCarousel/_RecentlyViewed")
    @Html.Partial("Layout/ProductsCarousel/_CartCommendations")
</div>