                                                    <path d="M1.43213 7.6818C1.3886 7.66449 1.34843 7.64106 1.31271 7.61203C1.20891 7.52832 1.14307 7.40055 1.14307 7.25712V7.02832C1.14307 6.77609 1.34731 6.57129 1.60066 6.57129H8.68547C8.93884 6.57129 9.14307 6.77609 9.14307 7.02832V7.25712C9.14307 7.50935 8.93884 7.71415 8.68547 7.71415H1.60066C1.54151 7.71415 1.48459 7.70243 1.43213 7.6818Z" fill="black"></path>
