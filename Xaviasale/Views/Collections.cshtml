@using Xaviasale.ClassHelper
@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    var home = Umbraco.AssignedContentItem.Root();
}

<div id="collection" class="content">
    <div class="container">
        <div class="row">
            <div class="col-12 breadcrumb-collection">
                <div class="breadcrumb_text hidden-xs">
                    <span class="breadcrumb_link subtle"><a href="@home.Url()" class="">@home.Name</a> /</span>
                    <span class="breadcrumb_link breadcrumb_link--current subtle cl-black">@Model.Name</span>
                </div>
            </div>
        </div>
    </div>
    <section data-section-id="kh1" id="kh1">
        <section>
            <div>
                <div class="container collection-detail" data-id="collection_page">
                    <div class="row">
                        <div class="col-12 collection-header justify-space-between">
                            <div class="flex-1">
                                <h1 class="h4 breadcrumbs-title">Products</h1>
                            </div>
                            <div class="flex items-center pt16 collection-select">
                                <div class="flex align-center justify-center collection-select--item">
                                    <div class="select-box w-100">
                                        <div class="base-select flex relative">
                                            <div class="absolute flex items-center px12 py8 base-select__prefix-icon">
