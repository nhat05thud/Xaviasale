@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    var home = Umbraco.AssignedContentItem.Root();
    var searchPage = home.DescendantOfType("search");
}
<div class="search-modal">
    <div class="search-modal__overlay"></div>
    <div class="px12 search-modal__wrap search-modal__wrap--animation-show">
        <div class="search-modal__header my24">
            <div class="flex align-start">
                <div class="search-modal__filters">
                    <form action="@(searchPage != null ? searchPage.Url(mode: UrlMode.Absolute) : "/")" method="get">
                        <div class="search-group flex align-center justify-center w-100 shape-sharp-t-l-b-r">
                            <div class="svg-container flex align-center justify-center">
                                <svg width="16" height="16" viewBox="0 0 16 16" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><path d="M13.314,11.9 L15.707,14.293 C16.098,14.684 16.098,15.316 15.707,15.707 C15.512,15.902 15.256,16 15,16 C14.744,16 14.488,15.902 14.293,15.707 L14.293,15.707 L11.9,13.314 C12.429,12.903 12.903,12.429 13.314,11.9 L13.314,11.9 Z M7,0 C10.86,0 14,3.14 14,7 C14,10.86 10.86,14 7,14 C3.14,14 0,10.86 0,7 C0,3.14 3.14,0 7,0 Z M7,2 C4.243,2 2,4.243 2,7 C2,9.757 4.243,12 7,12 C9.757,12 12,9.757 12,7 C12,4.243 9.757,2 7,2 Z" fill="#000000"></path></g>
                                </svg>
                            </div>
                            <div class="relative input-base w-100">
                                <div class="flex align-end"></div>
                                <input class="w-100 py6 px12 empty shape-sharp-t-l-b-r w-100" type="search" name="keyword" autocomplete="" placeholder="Find all products and more...">
                                <div></div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="search-modal__close-button flex align-center">
                    <a href="#" class="search-modal__close is-uppercase text-align-right has-text-weight-bold pl14">Cancel</a>
                </div>
            </div>
        </div>
        <div class="search-modal__body"></div>
    </div>
</div>
