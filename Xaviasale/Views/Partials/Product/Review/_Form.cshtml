                    @Html.TextBoxFor(model => model.Title, new { @class = "rv-widget__input", maxlength = "70", autocomplete = "on" })
                    @Html.ValidationMessageFor(x => x.Title)
                </div>
            </div>
            <div class="rv-widget__group-field">
                <label class="rv-widget__form-label">What's great</label>
                <div class="review-flex review-flex-wrap rv-widget__control rv-widget__control-list">
