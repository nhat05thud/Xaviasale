                    <div class="review-text-center rv-widget__control-suggest">REASONABLE PRICE</div>
                    <div class="review-text-center rv-widget__control-suggest">DEDICATED SELLER</div>
                    <div class="review-text-center rv-widget__control-suggest">FAST SHIPPING</div>
                    <div class="review-text-center rv-widget__control-suggest">HIGHLY RECOMMEND</div>
                </div>
            </div>
            <div class="rv-widget__group-field">
                <label class="rv-widget__form-label rv-widget__form-character">Review* <span>0/1000 characters</span></label><div class="rv-widget__control">
                    @Html.TextAreaFor(model => model.Review, new { @class = "rv-widget__input", spellcheck = "false", maxlength = "1000" })
